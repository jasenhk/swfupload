@{
    ViewBag.Title = "EXIF Data";
}

@section Head {
<script src="@Url.Content("~/Scripts/Exif/exif.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jQuery.Form/jquery.form.js")" type="text/javascript"></script>
<style type="text/css">
    .main { border:1px solid #ccc; }
    .flow { display:table-cell; padding:5px; }
    #upload-container { border: 1px solid #ccc; }
    #exif-container { border: 1px solid #ccc; vertical-align:top; }
    .upload-fieldset { border: 1px solid #c5dbec; margin: 5px; padding: 3px; display: inline-block; }
    .field-div { padding:2px 0 3px 5px; }
    legend { font-family:Lucida Grande, Lucida Sans, Arial, sans-serif; color:#2e6e9e; }
    .exif-label { font-weight:bold; padding:0 5px 0 0; display:table-cell; }
    .exif-data { display:table-cell; }
</style>
}

<h2>EXIF Data</h2>

<div class="main">
    <div id="upload-container" class="flow">
        <form id="upload" action="@Url.Action("Read", "Exif")" method="post" enctype="multipart/form-data">
            <fieldset class="upload-fieldset">
                <legend>Upload</legend>
                <div class="field-div"><input id="fileUpload" name="fileUpload" type="file" multiple="multiple" /></div>
                <div class="field-div"><button id="submit-btn" type="submit">Submit</button></div>
            </fieldset>
        </form>
    </div>

    <div id="exif-container" class="flow">
        <div><div class="exif-label">Date</div><div class="exif-data">2/1/2010</div></div>
        <div><div class="exif-label">ISO</div><div class="exif-data">200</div></div>
    </div>
</div>
